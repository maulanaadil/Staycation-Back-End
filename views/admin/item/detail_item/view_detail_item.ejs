<%- include('../../../partials/header.ejs') %>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../../partials/navbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../../partials/message.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Detail Item</h1>

          <p class="mb-4">
            DataTables is a third party plugin that is used to generate the demo
            table below. For more information about DataTables, please visit the
            <a target="_blank" href="https://datatables.net"
              >official DataTables documentation</a
            >.
          </p>

          <!-- Nav Tab-->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#show-feature"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >Show Feature</a
              >
            </li>
            <li class="nav-item" role="presentation">
              <a
                class="nav-link"
                id="profile-tab"
                data-toggle="tab"
                href="#show-activity"
                role="tab"
                aria-controls="profile"
                aria-selected="false"
                >Show Activity</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('show_feature.ejs') %> <%-
            include('show_activity.ejs')%>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../../partials/footer.ejs') %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <%-include('show_modal_feature.ejs') %> <%-include('show_modal_activity.ejs')
  %> <%- include('./../../../partials/importFile.ejs') %>
</body>

<script>
  $(document).ready(function () {
    $('#dataTableFeature').DataTable();
    $('#dataTableActivity').DataTable();
  });
  CKEDITOR.replace('about');

  $('#dataTableFeature').on('click', '.button-update', function () {
    let id = $(this).data('id');
    let name = $(this).data('name');
    let qty = $(this).data('qty');
    $('#edit-modal-feature').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.qty').val(qty);
  });

  $('#dataTableActivity').on('click', '.button-update', function () {
    let id = $(this).data('id');
    let name = $(this).data('name');
    let type = $(this).data('type');
    $('#edit-modal-activity').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.type').val(type);
  });
</script>
