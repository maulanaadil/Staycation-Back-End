<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter name"
                required
                autofocus
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="text"
                class="form-control"
                id="type"
                name="type"
                placeholder="Enter Type"
                required
              />
            </div>
            <div class="form-group">
              <label for="qty">Image</label>
              <input
                type="file"
                class="form-control-file"
                id="image"
                name="image"
              />
            </div>
            <div class="modal-footer">
              <input type="hidden" value="<%= itemId %>" name="itemId"></input>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
               <tbody>
                <% for (let i = 0; i < activity.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td align="center">
                    <img
                      src="http://localhost:3000/<%= activity[i].imageUrl %>"
                      alt="<%= activity[i].imageUrl %>"
                      height="100px"
                      width="100px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void();"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      &nbsp;
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                  <% } %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
