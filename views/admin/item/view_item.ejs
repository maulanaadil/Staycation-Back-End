<%- include('../../partials/header.ejs') %>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../partials/navbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../partials/message.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Item</h1>

          <p class="mb-4">
            DataTables is a third party plugin that is used to generate the demo
            table below. For more information about DataTables, please visit the
            <a target="_blank" href="https://datatables.net"
              >official DataTables documentation</a
            >.
          </p>

          <% if (action == 'view') { %>
          <!-- Nav Tab-->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#home"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >Show Item</a
              >
            </li>
            <li class="nav-item" role="presentation">
              <a
                class="nav-link"
                id="profile-tab"
                data-toggle="tab"
                href="#profile"
                role="tab"
                aria-controls="profile"
                aria-selected="false"
                >Add Item</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <!-- Card Table  -->
            <%- include('show_table_item.ejs') %> <%- include('add_item.ejs') %>
          </div>
          <% } else if (action == 'show image') { %>
          <!-- Nav Tab-->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#show-image"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >Show Image</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <!-- Show Image Item -->
            <%- include('show_image_item.ejs') %>
          </div>
          <% } else { %>
          <!-- Nav Tab-->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#edititem"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >Edit Item</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <!-- Show Edit Item -->
            <%- include('edit_item.ejs') %>
          </div>
          <% } %>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../partials/footer.ejs') %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('./../../partials/importFile.ejs') %>
</body>

<script>
  CKEDITOR.replace('about');
</script>
